@using DataBaseLayer.Entities;

@model List<Item>


<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-asp-controller="Contacts" class="btn btn-success">
            Create
        </a>
    </div>
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Manage</td>
                    <td>Id</td>
                    <td>Title</td>
                    <td>Foto</td>
                    <td>Price</td>
                    <td>Count</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-controller="Contacts" class="btn btn-warning" asp-route-id="@item.Id">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Contacts" class="btn btn-danger" asp-route-id="@item.Id">
                                Delete
                            </a>
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>
                            <img src="@item.ImageUrl" width="75" alt="Image Not Available" class="img-fluid" />
                        </td>
                        <td>@item.Price</td>
                        <td>@item.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
